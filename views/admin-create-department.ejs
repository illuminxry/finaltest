<h1>create department</h1>

<form action="/admin/create-department" method="post">
    <label for="">Department Name</label><br>
    <input type="text" name="department" id="department" placeholder="Enter Department Name"><br>
    <label for="">Visibility</label>
    <select name="visibility" id="visibility">
        <option value="" default selected disabled>Select Department Visibility</option>
        <option value="Visible">Visible</option>
        <option value="Invisible">Invisible</option>
    </select>
    <input type="submit" value="Create">
</form>